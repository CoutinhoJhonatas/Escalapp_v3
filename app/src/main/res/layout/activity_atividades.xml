<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AtividadesActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="153dp"
        android:layout_height="73dp"
        android:text="Adicionar Atividades"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="93dp" />

    <ImageView
        android:id="@+id/AtividadesIcon"
        android:layout_width="70dp"
        android:layout_height="72dp"
        android:layout_marginEnd="168dp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:srcCompat="@drawable/atividades"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="93dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="Adicione  Atividades ao quadro abaixo!"
        android:textColor="@color/black"

        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <EditText
        android:id="@+id/createAtividade"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Descreva a Atividade"

        android:inputType="textPersonName"
        android:textColor="@color/textGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/createResponsavel"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint=" Digite o nome do Responsável"

        android:inputType="textPersonName"
        android:textColor="@color/textGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="238dp"
        android:text="Atividade:"

        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="@+id/createAtividade"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="113dp"
        android:layout_height="23dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="200dp"
        android:text="Responsável:"

        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="@+id/createResponsavel"
        app:layout_constraintTop_toTopOf="@+id/createAtividade" />

    <ImageButton
        android:id="@+id/btnBackAtv"
        android:layout_width="25dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toStartOf="@+id/AtividadesIcon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_foreground" />

    <Button
        android:id="@+id/btnSalvarAtv"
        android:layout_width="215dp"
        android:layout_height="53dp"
        android:layout_marginTop="70dp"
        android:text="Salvar"

        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createResponsavel" />

</androidx.constraintlayout.widget.ConstraintLayout>